<!DOCTYPE html>
<html>
<head>
   
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-image: url("/g6.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }
        input[type=text], input[type=password], select {
            width: 50%;
            margin: 8px auto;
            display: block;
            padding: 12px 20px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0.5); /* added */
            border-radius: 10px; /* added */
        }
        input[type=text]::placeholder,input[type=password]::placeholder {
            color: #f2f2f2; /* set the color to a light gray/white color */
        }
        input[type=text]:focus, input[type=password]:focus {
            color: white;
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            
        }
        select:focus{
            background-color: rgba(255, 255, 255, 0.5) ;/* replace with the desired color */
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            color: white;
            
        }
        select {
            font-size: 16px;
            text-align: center;
            background-color: transparent;
            color: white;
            
        }
        
        option{
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            
            font: 1.5em Georgia, serif;
            background-color: transparent;
            color: orange;
        }
        label {
            font-size: 24px;
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            color: white;
            font: 1.5em Georgia, serif;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 50%;
            display: block;
            margin: 0 auto;
            border-radius: 10px; /* added */
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25); /* added */
            transition: all 0.2s ease-in-out; /* added */
        }
        button:hover {
            opacity: 0.8;
            transform: translateY(-2px); /* added */
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); /* added */
        }
        .container {
            padding: 16px;
            margin: 0 auto;
            text-align: center;
        }
        .error-message {
            color: red;
            font: 1.35em Georgia, serif;
            text-shadow: 1px 1px 2px black, 0 0 1em white, 0 0 0.2em black;
        }
        .mobile-frame {
            position: absolute;
            z-index: -1;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 500px;
            height: 600px;
            border-radius: 30px;
            box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);    
        }

        #hospital-dropdown {
         background-color: transparent;
        }

        #hospital-dropdown:focus {
            background-color: rgb(25, 10, 10);
            text-align: center;
            backdrop-filter: blur(10px); 
        }
        /*#hospital-dropdown option:checked {
          color: orange;
        } */
        #username:valid {
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            color: black;
            font: 1.3em Georgia, serif;
        }
        #hospital-dropdown:valid {
            text-shadow: 1px 1px 2px black, 0 0 1em pink, 0 0 0.2em pink;
            color: yellow;
            font: 1.5em Georgia, serif;
        }
    </style>
      <script type="text/javascript">
        function preback(){window.history.forward();}
        setTimeout("preback()",0);
        window.onunload=function(){null};
      </script>
      
    
</head>
<body>
 
    <div class="container">
        <div class="mobile-frame">
            <form action="/login" method="POST">
                 <br><br><br><br><br><br>
                <label for="username"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="username" id="username" required>
                <br><br>
                <label for="password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" id="password" required>
                <br><br>
                <label for="hospital"><b>Hospital</b></label>
                <select name="hospital" id="hospital-dropdown" required>
                    <option value="" selected disabled hidden>Select a hospital</option>
                    <option value="hospital1">Hospital 1</option>
                    <option value="hospital2">Hospital 2</option>
                </select>
                <br><br>
                <button type="submit" onclick="return checkHospital()">Login</button>
            </form>

            <br><br>
            <div id="error-message" class="error-message"></div>
        </div>
    </div>
    <script>
        function checkHospital() {
            var hospital = document.getElementById("hospital-dropdown").value;
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;
            if (username == "") {
                document.getElementById("error-message").innerHTML = "Please enter a username";
                return false;
            }
            else if (password == "") {
                document.getElementById("error-message").innerHTML = "Please enter a password";
                return false;
            }
            else if (hospital == "") {
                document.getElementById("error-message").innerHTML = "Please select a hospital";
                return false;
            }
            else
                return true;
        }
    </script>
</body>
</html>
